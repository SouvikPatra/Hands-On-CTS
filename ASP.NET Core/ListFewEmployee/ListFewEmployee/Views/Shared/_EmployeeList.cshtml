@model List<ListFewEmployee.Models.Employee>


<div class="row col-md-4">
    <table>
        <tr>
            <th>Name</th>
            <th>Salary</th>
        </tr>
        @foreach (var m in Model)
        {
            @if (m.IsPermanent == true)
            {
                <tr>
                    <td><span style="background-color:yellow">@m.Name</span></td>
                    <td><span style="background-color:yellow">@m.Salary</span></td>
                </tr>
            }
            else
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Salary</td>
                </tr>
            }
        }


    </table>
</div>
    


